extends ../layout

block content
  section.container-fluid
      h1 Departments
      button.btn.btn-primary(data-toggle="modal" data-target="#myModal") new department
      != h.dump(deps)
      .box
        .box-body 
          table.table.table-hover()
            tbody
                th name
                th options
            if deps.length > 0
              each dep in deps
                tr
                  td 
                    a(href=`departments/${dep._id}`) #{dep.name}
                  td delete | edit

  #myModal.modal.fade(tabindex="-1", role="dialog", aria-labelledby="myModalLabel")
      .modal-dialog(role="document")
        .modal-content
          .modal-header
            button.close(type="button", data-dismiss="modal", aria-label="Close")
              span(aria-hidden="true") Ã—
            h4#myModalLabel.modal-title Create new department
          .modal-body
            form(method="post")
              .form-group
                input.form-control(type="text" placeholder="create a new department" name="name")
              .form-group
                input(type="submit", value="save")
          .modal-footer
            button.btn.btn-default(type="button", data-dismiss="modal") Close
