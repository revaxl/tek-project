extends layout

block content
  section.container-fluid
    h1 Tags
    button.btn.btn-primary(data-toggle="modal" data-target="#myModal") new tag
    .box
      .box-body 
        table.table.table-hover()
          tbody
              th name
              th options
          if tags.length > 0
            each tag in tags
              tr
                td #{tag._id}
                td delete | edit


  #myModal.modal.fade(tabindex="-1", role="dialog", aria-labelledby="myModalLabel")
      .modal-dialog(role="document")
        .modal-content
          .modal-header
            button.close(type="button", data-dismiss="modal", aria-label="Close")
              span(aria-hidden="true") Ã—
            h4#myModalLabel.modal-title Create new tag
          .modal-body
            form(method="post")
              .form-group
                input.form-control(type="text" placeholder="create a new tag" name="_id")
                input.form-control.btn.btn-primary(type="submit")
          .modal-footer
            button.btn.btn-default(type="button", data-dismiss="modal") Close
